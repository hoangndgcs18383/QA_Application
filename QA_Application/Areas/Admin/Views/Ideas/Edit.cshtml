@model QA_Application.Models.Idea

@{
    ViewData["Title"] = "Edit";
}

<div class="text">Edit Idea</div>


 <div class="modal">
        <div class="modal__overlay">

        </div>

<div class="modal__body">

        <form asp-action="Edit" method="post" enctype="multipart/form-data" class="auth-form">
            <div class="auth-form__container">
   
                <div class="auth-form__group">
                    <div class="group">
                        <input asp-for="Title" type="text" class="group__input mt-16" placeholder="Title" >
                    </div>
        
                    <div class="group">
                        <input asp-for="Content" type="text" class="group__input mt-16" placeholder="Content" >
                    </div>
                    <div class="group">
                        <select asp-for="CategoryId" asp-items="@ViewBag.CategoryId" class="group__input mt-16"></select>
                    </div>
                    <div class="group">
                        <select asp-for="SpecialTagId" asp-items="@ViewBag.SpecialTagId" class="group__input mt-16"></select>
                    </div>
                    <div class="group">
                        <input asp-for="isAvailable" type="checkbox" class="group__input mt-16" placeholder="isAvailable" >
                    </div>
                </div>
    
                <div class="auth-form__aside mt-16">
                    <div class="auth-form__help">
                        <a asp-action="Index" class="auth-form__link auth-form__forgot">Back to list</a>
                    </div>
                </div>
    
                <div class="auth-form__controls mb-8">
                    <button type="submit" class="btn btn--primary">Submit</button>
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
