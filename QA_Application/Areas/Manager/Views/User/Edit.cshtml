@model QA_Application.Models.ApplicationUser

@{
    ViewData["Title"] = "Edit";
}

<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="p-5">
            <div class="text-center">
                <h1 class="h4 text-gray-900 mb-4">Edit Account</h1>
            </div>
            <form asp-action="Create" method="post" enctype="multipart/form-data" class="user">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <h3>@ViewBag.error</h3>

               <div class="form-group">
                    <input  asp-for="FirstName" type="text" class="form-control form-control-user"
                        id="title" placeholder="Enter Fist Name...">
                     <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input  asp-for="LastName" type="text" class="form-control form-control-user"
                        id="title" placeholder="Enter Last Name...">
                     <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input  asp-for="UserName" type="email" class="form-control form-control-user"
                        id="title" placeholder="Enter Title...">
                     <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input  asp-for="PasswordHash" type="password" class="form-control form-control-user"
                        id="password" placeholder="Enter Password...">
                     <span asp-validation-for="PasswordHash" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-success btn-icon-split btn-block">
                    <span class="text">Submit</span>
                </button>
            </form>
            <hr>
             <a asp-action="Index" class="btn btn-secondary btn-icon-split btn-block">
                <span class="text">Back</span>
             </a>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

