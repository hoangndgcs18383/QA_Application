@model QA_Application.Models.SpecialTag

@{
    ViewData["Title"] = "Delete";
}

<div class="text">Delete > @Model.SpecialTagName</div>

<div class="modal">
        <div class="modal__overlay">

        </div>

<div class="modal__body">

        <form asp-action="Delete" method="post" enctype="multipart/form-data" class="auth-form">
            <div class="auth-form__container">
                <input type="hidden" asp-for="Id" />
                <h3 class="delete__header">Are you sure you want to delete this?</h3>
                <div class="auth-form__group">
                    <div class="group">
                        <label asp-for="SpecialTagName"></label>
                        @Html.EditorFor(m => m.SpecialTagName, new {htmlAttributes = new { @class = "group__input mt-16", @readonly="readonly" ,@placeholder="Tag Name"} })
                    </div>
                </div>
                

                <div class="auth-form__aside mt-16">
                    <div class="auth-form__help">
                        <a asp-action="Index" class="auth-form__link auth-form__forgot">Back to list</a>
                    </div>
                </div>
    
                <div class="auth-form__controls mb-8">
                    <button type="submit" class="btn btn--primary">Delete</button>
                </div>
            </div>
        </form>
    </div>
</div>