@model QA_Application.Models.Category

@{
    ViewData["Title"] = "Edit";
}

<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="p-5">
            <div class="text-center">
                <h1 class="h4 text-gray-900 mb-4">Create Category</h1>
            </div>
            <form asp-action="Edit" method="post" enctype="multipart/form-data" class="user">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <h3>@ViewBag.error</h3>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="ParentCategoryId"></label>
                    <select asp-for="ParentCategoryId" asp-items="@ViewBag.ParentCategoryId" class="form-control form-control-user"></select>
                    <span asp-validation-for="ParentCategoryId" class="text-danger"></span>
                </div>

                <div class="form-group">
                     <label asp-for="CategoryName"></label>
                    <input  asp-for="CategoryName" type="text" class="form-control form-control-user"
                        id="title" placeholder="Enter Name...">
                     <span asp-validation-for="CategoryName" class="text-danger"></span>
                </div>

                <div class="form-group">
                     <label asp-for="Description"></label>
                     <input asp-for="Description" class="form-control form-control-user" placeholder="Enter Description..." />
                     <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="FirstDeadline"></label>
                    <input  asp-for="FirstDeadline" type="date" class="form-control">
                    <span asp-validation-for="FirstDeadline" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="FinalDeadline"></label>
                    <input  asp-for="FinalDeadline" type="date" class="form-control">
                    <span asp-validation-for="FinalDeadline" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-success btn-icon-split btn-block">
                <span class="text">Submit</span>
                </button>
            </form>
            <hr>
             <button asp-action="Index" class="btn btn-success btn-icon-split btn-block">
                <span class="text">Back</span>
             </button>
        </div>
    </div>
</div>>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

