@model QA_Application.Models.Idea

@{
    ViewData["Title"] = "Create";
    var summernote = new QA_Application.Models.Summernote("#content_idea");
}

<div class="text">Approve Idea > @Model?.Title</div>


 <div class="modal">
        <div class="modal__overlay">

        </div>

<div class="modal__body">

        <form asp-action="Approve" method="post" enctype="multipart/form-data" class="auth-form">
            <div class="auth-form__container">
                <h3 class="delete__header">Would you like to approve this ideas? @Model?.Title</h3>
                <div class="auth-form__group">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <h3>@ViewBag.error</h3>
                    <input type="hidden" asp-for="Id" />
                    <div class="group">
                        <label asp-for="Title"></label>
                        <input asp-for="Title" readonly="readonly" type="text" class="group__input" placeholder="Title" >
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
        
                    <div class="group">
                        <label asp-for="Content"></label>
                        <textarea id="content_idea" readonly="readonly" asp-for="Content" class="group__input" placeholder="Content" ></textarea>   
                        <span asp-validation-for="Content" class="text-danger"></span>
                    </div>

                    <div class="group">
                        <label asp-for="FileSubmit"></label>
                        <input asp-for="FileSubmit" readonly="readonly" type="file" class="group__input" name="fileSubmit" accept=".pdf" />
                    </div>

                    <div class="group">
                        <label asp-for="CategoryId"></label>
                        <select asp-for="CategoryId" readonly="readonly" asp-items="@ViewBag.CategoryId" class="group__input"></select>
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>
                    <div class="group">
                        <label asp-for="SpecialTagId"></label>
                        <select asp-for="SpecialTagId" readonly="readonly" asp-items="@ViewBag.SpecialTagId" class="group__input"></select>
                        <span asp-validation-for="SpecialTagId" class="text-danger"></span>
                    </div>
                </div>
    
                <div class="auth-form__aside mt-16">
                    <div class="auth-form__help">
                        <a asp-action="Index" class="auth-form__link auth-form__forgot">Back to list</a>
                    </div>
                </div>
    
                <div class="auth-form__controls mb-8">
                    <button type="submit" class="btn btn--primary">Approve</button>
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <partial name="~/Views/Shared/_SummernotePartial.cshtml" model="summernote" />
    <partial name="~/Views/Shared/_AlertifyPartial.cshtml"/>
}